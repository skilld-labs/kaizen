{
  "name": "kaizen-theme",
  "version": "1.0.0",
  "description": "Basic theme",
  "repository": "git@github.com:skilld-labs/kaizen.git",
  "author": "Skilld",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.2",
    "autoprefixer": "^9.5.0",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.26.3",
    "chalk": "^2.4.2",
    "chokidar": "^2.1.5",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "glob": "^7.1.3",
    "inquirer": "^6.2.1",
    "minimist": "^1.2.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "prettier": "^1.16.4",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-no-browser-hacks": "^1.2.1",
    "stylelint-order": "^2.1.0",
    "stylelint-scss": "^3.5.4",
    "susy": "^3.0.5",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.27.1",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.3.0",
    "webpack-modernizr-loader": "^4.0.1"
  },
  "dependencies": {
    "css-vars-ponyfill": "^1.17.2",
    "js-yaml": "^3.12.0",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1"
  },
  "scripts": {
    "build": "cross-env ./node_modules/.bin/run-p build:js build:css",
    "dev": "cross-env ./node_modules/.bin/run-p build:js-dev build:css-dev",
    "build:css": "yarn run compile:sass && yarn run post:css",
    "build:css-dev": "yarn run compile:sass-dev",
    "post:css": "cross-env ./node_modules/.bin/postcss \"dist/css/*.css\" --dir \"dist/css\"",
    "compile:sass": "cross-env node ./scripts/css/build.js",
    "compile:sass-dev": "cross-env NODE_ENV=development node ./scripts/css/build.js",
    "build:js": "cross-env ./node_modules/.bin/webpack",
    "build:js-dev": "cross-env NODE_ENV=development ./node_modules/.bin/webpack",
    "debug:js-build": "cross-env NODE_ENV=debug ./node_modules/.bin/webpack",
    "lint": "cross-env ./node_modules/.bin/run-p lint:*",
    "lint-fix": "cross-env ./node_modules/.bin/run-p \"lint:* --fix\"",
    "lint:js": "node ./node_modules/eslint/bin/eslint.js .",
    "lint:css": "cross-env ./node_modules/.bin/stylelint \"**/*.css\"",
    "lint:sass": "cross-env ./node_modules/.bin/stylelint \"**/*.scss\" --config ./.stylelintrc.sass.json",
    "breakpoints": "cross-env node ./scripts/breakpoints.js",
    "browsersync": "yarn run browser-sync start --proxy '127.0.0.1:8888' --files ./dist",
    "watch:sass": "cross-env node ./scripts/css/watch.js",
    "watch:js": "cross-env ./node_modules/.bin/webpack -w",
    "watch:bs": "cross-env NODE_ENV=development ./node_modules/.bin/run-p browsersync watch:js watch:sass"
  }
}
