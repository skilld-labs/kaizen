<div class="m-messages {{ modifier_class }}">
  <div class="layout-container">
    <div class="m-messages__content">
      <div class="m-messages__icon-container m-messages__icon-container--left">
        <svg aria-hidden="true" class="m-messages__icon {{ icon_modifier_class }}">
          <use xlink:href="{{ svgSpritePath }}#svg-smile-{{ icon }}"></use>
        </svg>
      </div>
      <div class="m-messages__text">
        Lorem ipsum dolor
      </div>
      <div class="m-messages__icon-container m-messages__icon-container--right m-messages__icon-container--clickable m-messages__close-icon" role="button" tabindex="0">
        <svg aria-hidden="true" class="m-messages__icon m-messages__icon--bigger m-messages__icon--close">
          <use xlink:href="{{ svgSpritePath }}#svg-close"></use>
        </svg>
      </div>
    </div>
  </div>
</div>
